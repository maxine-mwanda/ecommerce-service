# Server Configuration
SERVER_PORT=8080
SERVER_HOST=localhost

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=ecommerce
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m

# Logging Configuration
LOG_DIR=./logs
LOG_FILE=ecommerce.log
LOG_MAX_AGE=168h   # 7 days
LOG_ROTATION_TIME=24h

# Authentication (OIDC/OAuth2)
OIDC_ISSUER_URL=https://your-oidc-provider.com
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_REDIRECT_URL=http://localhost:8080/auth/callback
OIDC_SCOPES="openid profile email"

# SMS Notifications (Africa's Talking)
SMS_API_KEY=your-api-key
SMS_USERNAME=your-username
SMS_SENDER_ID=ECOMM
SMS_SANDBOX=true  # Set to false in production
SMS_ENABLED=true  # Can disable for testing

# Email Notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=no-reply@ecommerce.com
EMAIL_ENABLED=true

# Application Settings
APP_ENV=development  # development/staging/production
APP_NAME=Ecommerce-Service
APP_VERSION=1.0.0

# Security
JWT_SECRET=your-very-secure-jwt-secret-key
TOKEN_EXPIRY=24h  # Session token expiry
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Kubernetes (if deployed)
K8S_NAMESPACE=default
K8S_DEPLOYMENT_NAME=ecommerce-service
K8S_REPLICAS=3

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENDPOINT=/metrics

go mod
go sum